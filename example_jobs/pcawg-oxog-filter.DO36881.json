{
  "workflow_name": "pcawg-oxog-filter",
  "workflow_version": "1.0.0",
  "workflow_type": "cwl",
  "metadata": {
    "icgc_donor_id": "DO36881",
  },
  "metadata_service": {
    "url": "https://dcc.icgc.org/api/v1/repository/files",
    "params": {
      "filters": {
        "donor": {
          "id": {
            "is": ["{{metadata.icgc_donor_id}}"]
          }
        },
        "file": {
          "study": {
            "is": ["PCAWG"]
          }
        }
      },
      "size": 500
    }
  },
  "local_path": {
    "reference_data": "/data/jt-store/{{workflow_name}}",
    "input_data": "/data/jt-store/data/{{metadata.icgc_donor_id}}/{{workflow_name}}/{{workflow_version}}/input",
    "output_data": "/data/jt-store/data/{{metadata.icgc_donor_id}}/{{workflow_name}}/{{workflow_version}}/output"
  },
  "output": {
    "file_patterns": ["*.vcf.gz", "*.vcf.gz.tbi", "*.vcf.gz.idx"]
  },
  "job_file_template": {
    "refFile": {
      "path": "https://dcc.icgc.org/api/v1/download?fn=/PCAWG/reference_data/pcawg-broad/pcawg_broad_public_refs_full.tar.gz:public/Homo_sapiens_assembly19.fasta",
      "class": "File"
    },
    "out_dir": "/var/spool/cwl/",
    "refDataDir": {
      "class": "Directory",
      "path": "{{local_path.reference_data}}",
      "location": "{{local_path.reference_data}}"
    },
    "inputFileDirectory": {
      "class": "Directory",
      "path": "{{local_path.input_data}}",
      "location": "{{local_path.input_data}}"
    },
    "tumours":
    [
      {
        "tumourId": "8853cbee-7931-49a6-b063-a806943a10ad",
        "bamFileName": "gnos://pcawg-chicago-tcga/*:PCAWG.c44b8511-615b-45c2-b848-ac4a419e307e.bam",
        "associatedVcfs": [
          "gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.broad-*.somatic.snv_mnv.vcf.gz",
          "gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.svcp_*.somatic.snv_mnv.vcf.gz",
          "gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.MUSE_*.somatic.snv_mnv.vcf.gz",
          "gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.dkfz-*.somatic.snv_mnv.vcf.gz"
        ],
        "oxoQScore": 38.59
      }
    ]
  }
}
