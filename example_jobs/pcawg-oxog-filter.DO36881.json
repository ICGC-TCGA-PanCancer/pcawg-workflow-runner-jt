{
  "workflow": {
    "name": "pcawg-oxog-filter",
    "version": "1.0.0",
    "type": "cwl",
    "workflowfile_name": "pcawg_oxog_wf.cwl",
    "repo_url": "https://github.com/ICGC-TCGA-PanCancer/pcawg-oxog-filter"
  },
  "metadata": {
    "pipeline": "PCAWG",
    "job_partiption_key": "DO36881"
  },
  "metadata_service": {
    "url": "https://dcc.icgc.org/api/v1/repository/files",
    "params": {
      "filters": {
        "donor": {
          "id": {
            "is": ["DO36881"]
          }
        },
        "file": {
          "study": {
            "is": ["PCAWG"]
          }
        }
      },
      "size": 500
    }
  },
  "output": {
    "file_patterns": ["*.vcf.gz", "*.vcf.gz.tbi", "*.vcf.gz.idx"]
  },
  "job_file_template": {
    "refFile": {
      "path": "{File}[{{_reference_path}}/](https://dcc.icgc.org/api/v1/download?fn=/PCAWG/reference_data/pcawg-broad/pcawg_broad_public_refs_full.tar.gz:public/Homo_sapiens_assembly19.fasta)",
      "class": "File"
    },
    "out_dir": "/var/spool/cwl/",
    "refDataDir": {
      "class": "Directory",
      "path": "{{_reference_path}}",
      "location": "{{_reference_path}}"
    },
    "inputFileDirectory": {
      "class": "Directory",
      "path": "{{_input_path}}",
      "location": "{{_input_path}}"
    },
    "tumours":
    [
      {
        "tumourId": "PCAWG.c44b8511-615b-45c2-b848-ac4a419e307e",
        "bamFileName": "{File}[{{_input_path}}/](gnos://pcawg-chicago-tcga/*:PCAWG.c44b8511-615b-45c2-b848-ac4a419e307e.bam)",
        "associatedVcfs": [
          "{File}[{{_input_path}}/](gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.broad-*.somatic.snv_mnv.vcf.gz)",
          "{File}[{{_input_path}}/](gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.svcp_*.somatic.snv_mnv.vcf.gz)",
          "{File}[{{_input_path}}/](gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.MUSE_*.somatic.snv_mnv.vcf.gz)",
          "{File}[{{_input_path}}/](gnos://pcawg-chicago-tcga/*:8853cbee-7931-49a6-b063-a806943a10ad.dkfz-*.somatic.snv_mnv.vcf.gz)"
        ],
        "oxoQScore": 38.59
      }
    ]
  }
}
